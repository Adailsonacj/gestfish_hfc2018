<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="111dp"
        android:text="GestFish"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorHint"
        android:textSize="36sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/senhaCadastro"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="203dp"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/senhaCadastro"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-54dp"
        android:ems="10"
        android:hint="@string/senha"
        android:inputType="textPersonName|textPassword"
        android:textColorHighlight="@android:color/background_light"
        android:textColorHint="@android:color/background_light"
        android:textColorLink="@android:color/background_light" />

    <Button
        android:id="@+id/login"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@id/senha"
        android:layout_alignBottom="@+id/senha"
        android:layout_marginBottom="-59dp"
        android:background="?android:attr/statusBarColor"
        android:onClick="login"
        android:text="@string/login"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cadastro"
        android:layout_width="110dp"
        android:layout_height="42dp"
        android:layout_alignStart="@id/senha"
        android:layout_alignBottom="@+id/senha"
        android:layout_marginBottom="-59dp"
        android:background="@color/colorBotaoSecudario"
        android:onClick="cadastro"
        android:text="@string/cadastro"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>