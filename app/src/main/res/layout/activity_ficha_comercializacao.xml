<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008577"
    android:padding="20dp"
    tools:context=".FichaComercializacaoActivity">

    <Spinner
        android:id="@+id/especiePeixeSpinner"
        android:layout_width="374dp"
        android:layout_height="44dp"

        android:layout_alignBottom="@+id/nomeComprador"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="209dp"
        android:layout_marginBottom="-76dp" />

    <EditText
        android:id="@+id/nomeVendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Nome do Vendedor"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/nomeComprador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="78dp"
        android:ems="10"
        android:hint="Nome do Comprador"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/valorUnitario"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:hint="Valor Unitario"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/quantidadeKg"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:hint="Quantidade KG"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/valorTotal"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="343dp"
        android:ems="10"
        android:hint="Valor Total"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="103dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="11dp"
        android:background="#adff2f"
        android:text="cancelar" />

    <Button
        android:id="@+id/buttonConfirmar"
        android:layout_width="118dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="256dp"
        android:layout_marginBottom="12dp"
        android:background="#00574b"
        android:text="Confirmar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeComprador"
        android:layout_alignStart="@+id/nomeVendedor"
        android:layout_marginStart="2dp"
        android:layout_marginTop="11dp"
        android:text="Especie do Peixe" />

</RelativeLayout>